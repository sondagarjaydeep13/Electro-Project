<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      .boxsticky{
        top: -2px;
        position: sticky;
        z-index:30;
        
      }
    </style>
   
  </head>
  <body  onload="mydate()">
       <!-- HEADER -->
    <header>
      <!-- TOP HEADER -->
      <div id="top-header">
        <div class="container">
          <ul class="header-links pull-left">
            <li><a href="#"><i class="fa "></i> {{username}}</a></li>
            <li><a href="#"><i class="fa "></i>
                {{email}}</a></li>
            <li><a href="#"><i class="fa"></i>
               {{city}}</a></li>
          </ul>
          <ul class="header-links pull-right">
            <li><a id="currentdate" href="#"><i class="fa "></i> </a></li>
            <li><a href="login"><i class="fa "></i> {{msg}}</a></li>
             <li><a href="logout"><i class="fa "></i> {{msglogout}}</a></li>
          </ul>
        </div>
      </div>
      <!-- /TOP HEADER -->

      <!-- MAIN HEADER -->
      <div id="header">
        <!-- container -->
        <div class="container">
          <!-- row -->
          <div class="row">
            <!-- LOGO -->
            <div class="col-md-3">
              <div class="header-logo">
                <a href="#" class="logo">
                  <img src="./img/logo.png" alt="" />
                </a>
              </div>
            </div>
            <!-- /LOGO -->

            <!-- SEARCH BAR -->
            <div class="col-md-6">
              <div class="header-search">
                <form>
                  <select class="input-select">
                    <option value="0">All Categories</option>
                    <option value="1">Category 01</option>
                    <option value="1">Category 02</option>
                  </select>
                  <input class="input" placeholder="Search here" />
                  <button class="search-btn">Search</button>
                </form>
              </div>
            </div>
            <!-- /SEARCH BAR -->

            <!-- ACCOUNT -->
            <div class="col-md-3 clearfix">
              <div class="header-ctn">
                <!-- Wishlist -->
                <div>
                  <a href="viewwhishlist">
                    <i class="fa fa-heart-o"></i>
                    <a href="viewwhishlist"> Wishlist</a>
                    {{!-- <div class="qty">2</div> --}}
                  </a>
                </div>
                <!-- /Wishlist -->

                <!-- Cart -->
                <div class="dropdown">
                  <a
                    class="dropdown-toggle"
                    data-toggle="dropdown"
                    aria-expanded="true"
                  >
                    <i class="fa fa-shopping-cart"></i>
                    <a href="cart">Your Cart</a>
                    {{!-- <div class="qty">3</div> --}}
                  </a>
               

                <!-- Menu Toogle -->
                <div class="menu-toggle">
                  <a href="#">
                    <i class="fa fa-bars"></i>
                    <span>Menu</span>
                  </a>
                </div>
                <!-- /Menu Toogle -->
              </div>
            </div>
            <!-- /ACCOUNT -->
          </div>
          <!-- row -->
        </div>
        <!-- container -->
      </div>
      <!-- /MAIN HEADER -->
    </header>
    <div class="boxsticky">
    <nav id="navigation">
      <!-- container -->
      <div class="container">
        <div id="responsive-nav">
          <!-- NAV -->
          <ul class="main-nav nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="product">Products</a></li>
            <li><a href="store">Store</a></li>

          </ul>
          <!-- /NAV -->
        </div>
      </div>
      <!-- /container -->
    </nav>
</div>
   <script src="/js/myjs.js"></script>
  </body>
</html>